<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_image"
    android:id="@+id/layout"
    tools:context=".MainStart">

    <View
        android:id="@+id/start_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/start_rec"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/homeBtn"
        android:layout_width="333dp"
        android:layout_height="45dp"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/white"
        android:text="@string/homeBtn"
        android:textColor="@color/orange"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/emailBtn"
        app:layout_constraintTop_toBottomOf="@+id/score_view" />

    <ImageButton
        android:id="@+id/webBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="500dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/white"

        app:layout_constraintBottom_toBottomOf="@+id/start_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="@+id/start_view"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintVertical_bias="0.509"
        app:srcCompat="@drawable/web_icon" />

    <ImageButton
        android:id="@+id/shareBtn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="600dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/white"

        app:layout_constraintBottom_toBottomOf="@+id/start_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.203"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintVertical_bias="0.518"
        app:srcCompat="@drawable/share_icon" />

    <ImageButton
        android:id="@+id/emailBtn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="470dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/start_view"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.843"
        app:layout_constraintStart_toStartOf="@+id/start_view"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintVertical_bias="0.518"
        app:srcCompat="@drawable/email_icon" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="255dp"
        android:layout_height="290dp"
        android:layout_marginBottom="120dp"
        app:layout_constraintBottom_toBottomOf="@+id/start_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.44"
        app:srcCompat="@drawable/logo" />

    <View
        android:id="@+id/score_view"
        android:layout_width="332dp"
        android:layout_height="215dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/start_scoreboard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.568"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.904" />

    <Button
        android:id="@+id/playBtn"
        android:layout_width="333dp"
        android:layout_height="45dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/orange"
        android:text="@string/playBtn"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.564"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintTop_toBottomOf="@+id/score_view"
        app:layout_constraintVertical_bias="0.473" />

    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/lugrasimo_regular"
        android:text="@string/msg"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/score_view"
        app:layout_constraintEnd_toEndOf="@+id/start_view"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/ScoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="170dp"
        android:shadowColor="@color/black"
        android:shadowDx="8"
        android:shadowDy="8"
        android:shadowRadius="3"
        android:text="@string/scoreText"
        android:textColor="@color/orange"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/score_view"
        app:layout_constraintEnd_toEndOf="@+id/score_view"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="@+id/score_view"
        app:layout_constraintTop_toBottomOf="@+id/msg"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:textSize="60dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/score_view"
        app:layout_constraintEnd_toEndOf="@+id/score_view"
        app:layout_constraintStart_toStartOf="@+id/score_view"
        app:layout_constraintTop_toBottomOf="@+id/ScoreText" />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="280dp"
        android:layout_height="42dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/black"
        android:text="@string/saveBtn"
        android:textColor="@color/orange"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/score_view"
        app:layout_constraintEnd_toEndOf="@+id/score_view"
        app:layout_constraintStart_toStartOf="@+id/score_view"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/highScoreBtn"
        android:layout_width="280dp"
        android:layout_height="42dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/black"
        android:text="@string/highScoreBtn"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/score_view"
        app:layout_constraintEnd_toEndOf="@+id/score_view"
        app:layout_constraintStart_toStartOf="@+id/score_view"
        app:layout_constraintTop_toBottomOf="@+id/score" />

    <TextView
        android:id="@+id/highScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="90dp"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/highScoreBtn"
        app:layout_constraintEnd_toEndOf="@+id/score_view"
        app:layout_constraintStart_toStartOf="@+id/score_view"
        app:layout_constraintTop_toBottomOf="@+id/ScoreText"
        tools:text="0" />

    <TextView
        android:id="@+id/highScoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="30dp"
        android:text="@string/scoreText01"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/saveBtn"
        app:layout_constraintEnd_toEndOf="@+id/score_view"
        app:layout_constraintStart_toStartOf="@+id/score_view"
        app:layout_constraintTop_toBottomOf="@+id/ScoreText" />
</androidx.constraintlayout.widget.ConstraintLayout>